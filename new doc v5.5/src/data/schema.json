{
  "version": "5.5",
  "database_type": "mock",
  "description": "Mock database schema for DemiPay v5.5 Functional MVP",
  
  "users": {
    "structure": {
      "id": "string (UUID)",
      "email": "string (unique)",
      "password": "string (hashed)",
      "full_name": "string",
      "phone": "string",
      "created_at": "timestamp",
      "last_login": "timestamp",
      "is_active": "boolean",
      "profile_picture": "string (URL)",
      "preferences": {
        "theme": "string (light/dark)",
        "currency": "string (USD/EUR/GBP)",
        "notifications": "boolean",
        "language": "string"
      }
    },
    "example": {
      "id": "user-001",
      "email": "demo@demipay.com",
      "password": "hashed_password_here",
      "full_name": "Demo User",
      "phone": "+1234567890",
      "created_at": "2025-10-29T00:00:00Z",
      "last_login": "2025-10-29T08:00:00Z",
      "is_active": true,
      "profile_picture": "https://api.dicebear.com/7.x/avataaars/svg?seed=demo",
      "preferences": {
        "theme": "light",
        "currency": "USD",
        "notifications": true,
        "language": "en"
      }
    }
  },
  
  "wallets": {
    "structure": {
      "id": "string (UUID)",
      "user_id": "string (foreign key)",
      "balance": "number (decimal)",
      "currency": "string",
      "wallet_address": "string (unique)",
      "created_at": "timestamp",
      "updated_at": "timestamp"
    },
    "example": {
      "id": "wallet-001",
      "user_id": "user-001",
      "balance": 1234.56,
      "currency": "USD",
      "wallet_address": "DP-DEMO-001-2025",
      "created_at": "2025-10-29T00:00:00Z",
      "updated_at": "2025-10-29T08:00:00Z"
    }
  },
  
  "transactions": {
    "structure": {
      "id": "string (UUID)",
      "sender_id": "string (foreign key)",
      "recipient_id": "string (foreign key)",
      "amount": "number (decimal)",
      "currency": "string",
      "type": "string (send/receive/deposit/withdrawal)",
      "status": "string (pending/completed/failed/cancelled)",
      "note": "string",
      "transaction_hash": "string (unique)",
      "created_at": "timestamp",
      "completed_at": "timestamp",
      "fee": "number (decimal)"
    },
    "example": {
      "id": "txn-001",
      "sender_id": "user-001",
      "recipient_id": "user-002",
      "amount": 100.00,
      "currency": "USD",
      "type": "send",
      "status": "completed",
      "note": "Payment for services",
      "transaction_hash": "TXN-2025-10-29-001",
      "created_at": "2025-10-29T08:00:00Z",
      "completed_at": "2025-10-29T08:00:03Z",
      "fee": 0.50
    }
  },
  
  "contacts": {
    "structure": {
      "id": "string (UUID)",
      "user_id": "string (foreign key)",
      "contact_user_id": "string (foreign key)",
      "nickname": "string",
      "added_at": "timestamp"
    },
    "example": {
      "id": "contact-001",
      "user_id": "user-001",
      "contact_user_id": "user-002",
      "nickname": "John Doe",
      "added_at": "2025-10-29T00:00:00Z"
    }
  },
  
  "sessions": {
    "structure": {
      "id": "string (UUID)",
      "user_id": "string (foreign key)",
      "token": "string (unique)",
      "created_at": "timestamp",
      "expires_at": "timestamp",
      "ip_address": "string",
      "user_agent": "string"
    },
    "example": {
      "id": "session-001",
      "user_id": "user-001",
      "token": "sess_token_abc123xyz",
      "created_at": "2025-10-29T08:00:00Z",
      "expires_at": "2025-10-30T08:00:00Z",
      "ip_address": "192.168.1.1",
      "user_agent": "Mozilla/5.0..."
    }
  }
}